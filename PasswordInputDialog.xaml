<UserControl
    x:Class="LockSnap.PasswordInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LockSnap"
    Width="300" Height="200">

    <Grid Background="#CCFFFFFF" CornerRadius="10" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Enter Password" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Width="200" PlaceholderText="Password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button x:Name="OkButton" Content="OK" Width="80"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
